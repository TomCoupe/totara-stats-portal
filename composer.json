{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.1",
        "jenssegers/blade": "^2",
        "illuminate/view": "^10",
        "illuminate/events": "^10",
        "illuminate/filesystem": "^10",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "spatie/ray": "^1.42"
    },
    "autoload": {
        "files": [
            "./app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post_root_package_install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env);\""
        ]
    }
}
